#!/bin/bash
cd "$(dirname $0)"/.. || exit 1
PROC_NAME='web-performance-monitoring-system'

help(){
    echo "${0} <start|stop|restart|status>"
    exit 1
}

status(){
    ps -eo 'pid,command' | grep "\-\-title=$PROC_NAME" | grep -v grep > /dev/null 2>&1
    ret=$?
    if [ 0 -eq $ret ]; then
        echo "running"
        return 0
    else
        echo "not running"
        return 1
    fi
}

start(){
    node start
}

stop(){
    node stop
}

restart(){
    stop
    start
}

case "${1}" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    status|health|checkhealth|st)
        status
        ;;
    *)
        help
        ;;
esac
